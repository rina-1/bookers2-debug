<div class="container">
 <div class="row">
  <div class="col-md-9 col-md-offset-1">

<% if @user_or_book == "1" %>
    <h1>User</h1>
    <table class="table">
    <thead>
  	<tr>
  		<th>image</th>
  		<th>name</th>
  		<th>follows</th>
  		<th>followers</th>
  		<th colspan="6"></th>
  	</tr>
    </thead>
    <% @users.each do |user| %>
    <tbody>
    <tr>
       	<td><%= attachment_image_tag(user, :profile_image, size:'100x100', fallback: "no-image-mini.jpg") %></td>
		<td><%= user.name %></td>
		<td><%= user.followings.count %></td>
		<td><%= user.reverse_of_relationships.count %></td>
		<td><%= render 'relationships/follow_button', user: user %></td>
		<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
	</tr>
    <% end %>
    </tbody>
    </table>

<% elsif @user_or_book == "2" %>
    <h2>book</h2>
    <table class="table">
    <thead>
    <tr>
		<th></th>
		<th>Title</th>
		<th>Opinion</th>
		<th colspan="3"></th>
	</tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
    <tr>
        <td><%= link_to(book.user) do %>
			<%= attachment_image_tag(book.user, :profile_image, size:'100x100',fallback: "no-image-mini.jpg") %>
			<% end %></td>
		<td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
		<td><%= book.body %></td>
    </tr>
    </tbody>
    <% end %>
    </table>
<% else %>
<% end %>
 </div>
 </div>
</div>

