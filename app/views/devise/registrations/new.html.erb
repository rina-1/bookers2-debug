<div class="container">
  <div class="row">
    <div class="col-md-7 col-md-offset-1">
      <h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <!--name表示の追加-->
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class: "name" %>
  </div>
  <!--name表示の追加-->

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "email" %>
  </div>

  <div>Postal code</div>
  <%= f.text_field :post_code %>

  <div>Prefecture</div>
  <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, include_blank: '都道府県'%>
<!--f.collection_select　:メソッド名, オブジェクトの配列, value属性の項目(JpPrefecture::Prefectureの中で定義されてるcodeカラムで検索して),テキストの項目 (JpPrefecture::Prefectureの中で定義されてるnameカラムを表示させる)-->

<!-- コンソールでJpPrefecture::Prefecture.allやshow-source JpPrefecture::Prefecture打つとJpPrefecture::Prefectureの中身を見ることができる"-->

  <div>City</div>
  <%= f.text_field :address_city %>

  <div>Street</div>
  <%= f.text_field :address_street %>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "password" %>
  </div>

<!--パスワード確認入力フォーム-->
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password_confirm" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",class: "btn btn-success" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>

</div>
</div>
</div>